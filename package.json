{
  "name": "subclip-starter-kit",
  "version": "1.0.2",
  "description": "Subclip Starter Kit",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "build-main": "tsc && tsc --project tsconfig.main.json",
    "build-renderer": "webpack --mode production",
    "build": "npm run build-main && npm run build-renderer",
    "build:production": "npm run build-main && npm run build-renderer",
    "start": "electron .",
    "dev": "npm run build-main && concurrently \"npm run watch-main\" \"npm run dev-renderer\"",
    "watch-main": "tsc --project tsconfig.main.json --watch",
    "dev-renderer": "webpack serve --mode development",
    "test": "echo \"Error: no test specified\" && exit 1",
    "rebuild": "electron-rebuild",
    "rebuild:win": "electron-rebuild --platform=win32",
    "rebuild:mac": "electron-rebuild --platform=darwin",
    "rebuild:linux": "electron-rebuild --platform=linux",
    "pack": "npm run build:production && electron-builder --dir",
    "dist": "rm -rf release/* && npm run build:production && electron-builder --mac",
    "dist:mac": "rm -rf release/* && npm run build:production && npm run rebuild:mac && electron-builder --mac",
    "dist:win": "rm -rf release/* && npm run build:production && npm run rebuild:win && electron-builder --win",
    "dist:linux": "rm -rf release/* && npm run build:production && npm run rebuild:linux && electron-builder --linux",
    "release:mac": "npm run build:production && npm run rebuild:mac && electron-builder --mac --publish=always",
    "release:win": "npm run build:production && npm run rebuild:win && electron-builder --win --publish=always", 
    "release:linux": "npm run build:production && npm run rebuild:linux && electron-builder --linux --publish=always",
    "dist:all": "npm run dist:mac && npm run dist:win && npm run dist:linux",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "tag:create": "git tag v$(node -p \"require('./package.json').version\")",
    "tag:push": "git push origin v$(node -p \"require('./package.json').version\")",
    "release:prepare": "npm run version:patch && npm run tag:create && npm run tag:push",
    "release": "rm -rf release/* && npm run release:mac && npm run release:win && npm run release:linux"
  },
  "keywords": [
    "electron",
    "text",
    "image",
    "editor"
  ],
  "author": {
    "name": "Subclip",
    "email": "support@subclip.app"
  },
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^24.6.2",
    "assert": "^2.1.0",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "concurrently": "^9.2.0",
    "constants-browserify": "^1.0.0",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^7.1.2",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "events": "^3.3.0",
    "html-webpack-plugin": "^5.6.4",
    "https-browserify": "^1.0.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "process": "^0.11.10",
    "querystring-es3": "^0.2.1",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "string_decoder": "^1.3.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.18",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "url": "^0.11.4",
    "util": "^0.12.5",
    "vm-browserify": "^1.1.2",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@tabler/icons-react": "^3.35.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/react": "^19.2.0",
    "@types/react-color": "^3.0.13",
    "@types/react-dom": "^19.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "electron-updater": "^6.6.2",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.544.0",
    "mini-svg-data-uri": "^1.4.4",
    "react": "^19.2.0",
    "react-color": "^2.19.3",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.1.11"
  },
  "build": {
    "appId": "com.subclip.starter-kit",
    "productName": "Subclip Starter Kit",
    "directories": {
      "output": "release"
    },
    "compression": "maximum",
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "icon": "assets/icon.png",
    "files": [
      "dist/**/*",
      "!dist/mac*",
      "!dist/*.dmg",
      "!dist/*.dmg.blockmap",
      "!dist/latest-mac.yml",
      "package.json",
      ".env"
    ],
    "asarUnpack": [
      "dist/assets/fonts/**/*",
      ".env"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "proSamik",
        "repo": "macos-101",
        "publishAutoUpdate": true,
        "releaseType": "release"
      }
    ],
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "generateUpdatesFilesForAllChannels": false,
    "mac": {
      "category": "public.app-category.graphics-design",
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "identity": "D7053292F8F66FC7A25AD09700A0C4147357E408",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "signIgnore": [
        "node_modules/@electron/",
        "node_modules/electron/",
        "node_modules/electron-builder/",
        "node_modules/electron-updater/"
      ]
    },
    "dmg": {
      "title": "Subclip Starter Kit",
      "icon": "assets/icon.png",
      "window": {
        "width": 540,
        "height": 380
      },
      "writeUpdateInfo": true,
      "format": "UDZO"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "forceCodeSigning": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "maintainer": "Subclip <support@subclip.app>",
      "category": "Graphics",
      "forceCodeSigning": false
    }
  }
}
