{
  "name": "subclip-starter-kit",
  "version": "1.0.0",
  "description": "Subclip Starter Kit",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "webpack --mode production",
    "build:production": "NODE_ENV=production npm run build:main && NODE_ENV=production npm run build:renderer",
    "start": "electron .",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "tag:create": "git tag v$(node -p \"require('./package.json').version\")",
    "tag:push": "git push origin v$(node -p \"require('./package.json').version\")",
    "release:prepare": "npm run version:patch && npm run tag:create && npm run tag:push",
    "release": "rm -rf release/* && npm run build:production && NODE_ENV=production electron-builder --mac --win --linux --publish=always",
    "upload": "gh release create v$(node -p \"require('./package.json').version\") release/*.dmg \"release/\"*.exe \"release/\"*.AppImage --repo proSamik/subclip-free-tool-thumbnail-releases --title \"Subclip Thumbnail Maker v$(node -p \"require('./package.json').version\")\" --notes \"Release v$(node -p \"require('./package.json').version\")\"",
    "dist": "npm run build && electron-builder",
    "dist:all": "npm run build:production && NODE_ENV=production electron-builder --mac --win --linux",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "electron",
    "text",
    "image",
    "editor"
  ],
  "author": "Subclip",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^24.6.2",
    "assert": "^2.1.0",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "constants-browserify": "^1.0.0",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^7.1.2",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "events": "^3.3.0",
    "html-webpack-plugin": "^5.6.4",
    "https-browserify": "^1.0.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "process": "^0.11.10",
    "querystring-es3": "^0.2.1",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "string_decoder": "^1.3.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.18",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "url": "^0.11.4",
    "util": "^0.12.5",
    "vm-browserify": "^1.1.2",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@tabler/icons-react": "^3.35.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/react": "^19.2.0",
    "@types/react-color": "^3.0.13",
    "@types/react-dom": "^19.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "electron-updater": "^6.6.2",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.544.0",
    "mini-svg-data-uri": "^1.4.4",
    "react": "^19.2.0",
    "react-color": "^2.19.3",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.1.11"
  },
  "build": {
    "appId": "com.subclip.starter-kit",
    "productName": "Subclip Starter Kit",
    "directories": {
      "output": "release"
    },
    "icon": "assets/icon.png",
    "files": [
      "dist/**/*",
      "!dist/mac*",
      "!dist/*.dmg",
      "!dist/*.dmg.blockmap",
      "!dist/latest-mac.yml",
      "package.json"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "proSamik",
        "repo": "repo-name",
        "publishAutoUpdate": true,
        "releaseType": "release"
      }
    ],
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "generateUpdatesFilesForAllChannels": false,
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "Subclip Thumbnail maker",
      "window": {
        "width": 540,
        "height": 380
      },
      "writeUpdateInfo": true,
      "format": "UDZO"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "forceCodeSigning": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "forceCodeSigning": false
    }
  }
}
